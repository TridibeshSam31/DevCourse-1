generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//now we can name any of the provider on the provider means mongodb anything we want 
//for a todo application 

model User {
  id        Int    @id @default(autoincrement()) //sometimes we use ccuid in place of autoincrement mongodb mai id apne aap hi generate hoti thi lekin isme humko id lekhni pdti hai
  username  String
  password  String
  firstName String
  Lastname  String
}

model TODO {
  id          Int     @id @default(autoincrement())
  title       String?
  description String
  done        Boolean @default(false)
  userId      Int
}
